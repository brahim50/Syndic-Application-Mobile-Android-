<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ma.emsi.syndicapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SyndicApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SalleMachine"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="ma.emsi.syndicapp.AuthActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ma.emsi.syndicapp.UpdateRevenuActivity"
            android:exported="false" />
        <activity
            android:name="ma.emsi.syndicapp.UpdateResidentActivity"
            android:exported="false"
            android:label="@string/title_activity_update_resident"
            android:theme="@style/Theme.SalleMachine.NoActionBar" />
        <activity
            android:name="ma.emsi.syndicapp.UpdateLmmeubleActivity"
            android:exported="false" />
        <activity
            android:name="ma.emsi.syndicapp.NewRevenuActivity"
            android:exported="false"
            android:label="@string/title_activity_new_revenu"
            android:theme="@style/Theme.SalleMachine.NoActionBar" />
        <activity
            android:name="ma.emsi.syndicapp.NewResidentActivity"
            android:exported="false" />
        <activity
            android:name="ma.emsi.syndicapp.NewLmmeubleActivity"
            android:exported="false" />
        <activity
            android:name="ma.emsi.syndicapp.NewAppartmentActivity"
            android:exported="false" />
        <activity
            android:name="ma.emsi.syndicapp.UpdateAppartementActivity"
            android:exported="false" />
        <activity
            android:name="ma.emsi.syndicapp.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SalleMachine.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>